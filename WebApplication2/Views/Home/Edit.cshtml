@model Student
@{
    ViewData["Title"] = "Update";
}
<h1>Update</h1>
<div class="first">
    <form asp-action="Update" method="post">

        <input type="text" placeholder="PersonID" name="PersonID" value="@Model.Id" hidden>

        <label for="Name">Name</label><br>
        <input type="text" placeholder="Name" name="Name" value="@Model.Name">
        <br>
        <br>

        <label for="Email">Email</label><br>
        <input type="text" placeholder="Email" name="Email" value="@Model.Email">
        <br>
        <br>

        <label for="Gender">Gender</label><br>
        <input type="text" placeholder="Gender" name="Gender" value="@Model.Gender">
        <br><br>

        <label for="Location">Location</label><br>
        <input type="text" placeholder="Location" name="Location" value="@Model.Location">
        <br><br>

        <label for="Password">Password</label><br>
        <input type="text" placeholder="Password" name="Password" value="@Model.Password">
        <br><br>

        <button type="submit">Update</button>
    </form>
</div>